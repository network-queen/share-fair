<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ======================== -->
    <!-- Default / Dev: colored console output -->
    <!-- ======================== -->
    <springProfile name="default | dev">
        <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%-40.40logger{39}) : %msg%n</pattern>
            </encoder>
        </appender>

        <logger name="com.sharefair" level="DEBUG"/>
        <logger name="org.springframework.security" level="WARN"/>

        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>

    <!-- ======================== -->
    <!-- Docker: JSON console + Logstash TCP -->
    <!-- ======================== -->
    <springProfile name="docker">
        <!-- JSON stdout for Docker log drivers -->
        <appender name="JSON_CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
            <encoder class="net.logstash.logback.encoder.LogstashEncoder">
                <includeCallerData>false</includeCallerData>
            </encoder>
        </appender>

        <!-- TCP to Logstash (async, non-blocking) -->
        <appender name="LOGSTASH" class="net.logstash.logback.appender.LogstashTcpSocketAppender">
            <destination>logstash:5000</destination>
            <encoder class="net.logstash.logback.encoder.LogstashEncoder"/>
            <!-- Reconnect if Logstash is temporarily down -->
            <reconnectionDelay>5 seconds</reconnectionDelay>
            <!-- Drop logs rather than block the app if queue is full -->
            <ringBufferSize>8192</ringBufferSize>
        </appender>

        <logger name="com.sharefair" level="DEBUG"/>
        <logger name="org.springframework.security" level="WARN"/>

        <root level="INFO">
            <appender-ref ref="JSON_CONSOLE"/>
            <appender-ref ref="LOGSTASH"/>
        </root>
    </springProfile>

</configuration>
